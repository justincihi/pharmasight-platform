# Replit Configuration for PharmaSight Platform

run = "python app.py"
entrypoint = "app.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG:$PYTHONPATH"
PORT = "5000"

[[ports]]
localPort = 5000
externalPort = 80
