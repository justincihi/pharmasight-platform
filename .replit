# Replit Configuration for PharmaSight Platform

run = "python app.py"
entrypoint = "app.py"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "catch2", "comic-neue", "coordgenlibs", "eigen", "freetype", "glibcLocales", "inchi", "libxcrypt", "maeparser", "pkg-config", "rapidjson", "xsimd"]

[deployment]
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "--timeout=120", "src.pharmasight_complete:app"]
deploymentTarget = "autoscale"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG:$PYTHONPATH"
PORT = "5000"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40801
externalPort = 3003

[[ports]]
localPort = 41687
externalPort = 3000

[[ports]]
localPort = 43745
externalPort = 3001

[[ports]]
localPort = 44091
externalPort = 3002

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PharmaSight Platform"

[[workflows.workflow]]
name = "PharmaSight Platform"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[agent]
expertMode = true
integrations = ["github:1.0.0"]
